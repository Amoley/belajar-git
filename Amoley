character

fun main() {
    var vocal = 'Z'

        println("Huruf " + vocal--)
        println("Huruf " + vocal--)
        println("Huruf " + vocal++)
        vocal -= 6;
        println("Huruf " + vocal--)
        println("Huruf " + vocal++)
        println("Huruf " + vocal--)
        vocal += 6;
        println("Huruf " + vocal++)
        println("Huruf " + vocal++)
        println("Huruf " + vocal++)
}

strings
fun main() {
    val wordOne = """
        Modern
    """.trimIndent()

    val wordTwo = """
        Concise
    """.trimIndent()

    val wordThree = """
        Pragmatic
    """.trimIndent()

    val wordFour = """
        Safe
    """.trimIndent()

    println("Kotlin is " +wordOne)
    println("Kotlin is " +wordTwo)
    println("Kotlin is " +wordThree)
    println("Kotlin is " +wordFour)
}
