fun setUser(name: String, hobby: String, age: Int) =
        "My name is $name, I like $hobby and,  I'm $age years 
If Expressions
fun main(args: Array<String>) {
    val nilai = 75
    if (nilai >= 75){
        println("Nilai kamu " + nilai + ", selamat yaa")
    }else{
        println("Nilai kamu " +nilai+ ", silahkan ikuti remidial")
    }
}
        



